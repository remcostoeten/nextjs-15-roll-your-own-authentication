# Next.js Configuration
PORT=3000
NODE_ENV=development

# Database Configuration
# Options: sqlite, none
DATABASE_TYPE=sqlite

# SQLite Configuration (used if DATABASE_TYPE=sqlite)
SQLITE_PATH=./database.db
# SQLite connection string
DATABASE_URL=file:${SQLITE_PATH}

# Authentication (use strong random values in production)
JWT_SECRET=your_jwt_secret_key_change_in_production
REFRESH_TOKEN_SECRET=your_refresh_token_secret_key_change_in_production
ACCESS_TOKEN_EXPIRES_IN=15m
REFRESH_TOKEN_EXPIRES_IN=7d

# Application Settings
NEXT_TELEMETRY_DISABLED=1 

# Floating Todo
NEXT_PUBLIC_ENABLE_FLOATING_TODO=true

# GitHub API
GITHUB_TOKEN=your_github_token_here