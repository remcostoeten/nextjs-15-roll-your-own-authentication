# Database Configuration
USE_LOCAL_DB=true # Set to false to use Vercel Postgres
DOCKER_DATABASE_URL="postgresql://username:password@localhost:5432/database"

# Vercel Postgres (Add these when deploying to Vercel)
POSTGRES_URL="postgres://your-vercel-postgres-url"
POSTGRES_PRISMA_URL="postgres://your-vercel-postgres-prisma-url"
POSTGRES_URL_NON_POOLING="postgres://your-vercel-postgres-non-pooling-url"
POSTGRES_USER="default"
POSTGRES_HOST="your-host.postgres.vercel-storage.com"
POSTGRES_PASSWORD="your-password"
POSTGRES_DATABASE="verceldb"

# Other environment variables... 