		"framer-motion": "^12.4.10",
		"jose": "^6.0.8",
		"lucide-react": "^0.479.0",
		"next": "15.2.1",
		"next-themes": "^0.4.4",
		"react": "^19.0.0",
		"react-dom": "^19.0.0",
		"sonner": "^2.0.1",
		"tailwind-merge": "^3.0.2",
		"tailwindcss-animate": "^1.0.7",
		"zod": "^3.24.2",
		"zustand": "^5.0.3"
	},
	"devDependencies": {
