{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "db": ["./src/api/db/index.ts"],
      "schema": ["./src/api/schema/index.ts"],
      "ui": ["./components/ui/index.ts"],
      "utils": ["./src/utils/index.ts"],
      "env": ["./src/api/env/env-schema.ts"],
      "current-user": ["./src/modules/auth/api/queries/user.queries.ts"],
      "session": ["./src/modules/auth/api/services/session.ts"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
